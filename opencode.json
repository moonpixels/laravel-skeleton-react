{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "plan",
  "share": "manual",
  "autoupdate": true,
  "mcp": {
    "laravel-boost": {
      "type": "local",
      "command": ["php", "./artisan", "boost:mcp"],
      "enabled": true
    },
    "shadcn": {
      "type": "local",
      "command": ["npx", "shadcn@latest", "mcp"],
      "enabled": true
    },
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    },
    "git": {
      "type": "local",
      "command": ["uvx", "mcp-server-git"],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"],
      "enabled": true
    }
  },
  "permission": {
    "bash": {
      "*": "allow",
      "rm -rf*": "deny",
      "git push --force": "ask",
      "php artisan migrate:fresh": "ask",
      "php artisan migrate:fresh --seed": "ask"
    }
  },
  "formatter": {
    "pint": {
      "command": ["./vendor/bin/pint", "$FILE"],
      "extensions": [".php"]
    },
    "prettier": {
      "command": ["npx", "prettier", "--write", "$FILE"],
      "extensions": [".js", ".jsx", ".ts", ".tsx", ".json", ".md"]
    }
  }
}
